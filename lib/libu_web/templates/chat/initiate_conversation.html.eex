<div class="p-5">

    <div class="flex rounded-lg bg-white">

        <div class="mx-auto overflow-hidden shadow-lg bg-gray-100">
            <div class="p-3 pb-0 ">
                <h2 class="flex text-xl text-purple-700 font-medium justify-center">Initiate a Conversation</h2></br>
            </div>
        </div>
        
        <div class="w-full mx-auto overflow-hidden shadow-lg box rounded-l-lg">
            <div class="p-4">
                <%= live_render(@conn, LibuWeb.ChatLive.InitiateConversation, 
                    session: %{current_user: @current_user}
                ) %>
            </div>
        </div>
    </div>

    <%= button( "Back", to: "/chat", method: :get,
        class: "btn-quiet mt-4"
    )%>
    
</div>