<div class="p-5">

    <div class="flex rounded-lg bg-white">

        <div class="mx-auto overflow-hidden shadow-lg bg-gray-100">
            <div class="p-3 pb-0 ">
                <h2 class="flex text-xl text-purple-800 font-medium justify-center">Initiate a Conversation</h2></br>
            </div>
        </div>
        
        <div class="w-full mx-auto overflow-hidden shadow-lg box rounded-l-lg">
            <div class="p-4">
                <%= f = form_for @changeset, "#", [phx_change: :validate, phx_submit: :save] %>

                    <%= label( f, :title,
                        class: "block mb-2 text-gray-700"
                    )%>
                    <%= text_input( f, :title, 
                        class: "appearance-none text-input py-2 px-3 mb-3 leading-tight "
                    )%>
                    <%= error_tag( f, :title )%>

                    <%= label( f, :message,
                        class: "block mb-2 text-gray-700"
                    )%>
                    <%= textarea( f, :message, 
                        class: "appearance-none text-input py-2 px-3 mb-3 leading-tight "
                    )%>
                    <%= error_tag( f, :message )%>

                    <%= hidden_input f, :initiator_id, value: @current_user.id %>
                    <%= hidden_input f, :initiator_name, value: @current_user.initiator_name %>
                    <div>
                        <%= submit("Submit", phx_disable_with: "Submitting...", 
                        class: "btn-gray" 
                        )%>
                    </div>
                </form>

            </div>
        </div>
    </div>

    <%= button( "Back", to: Routes.live_path(@socket, ChatLive.Index), method: :get,
        class: "btn-quiet mt-4"
    )%>
    
</div>