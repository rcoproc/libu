<%# The overall layout of the chat containing views of active conversations, 
the current chat-log of convo_id, and the conversation's metrics %>
<div class="flex w-full justify-between h-full">
    <div class="p-3 pr-0 w-1/5">
        <%= live_render(@conn, LibuWeb.ChatLive.ActiveConversations)%>
    </div>
    <div class="p-3 w-4/5 h-full">
        <%= live_render(@conn, LibuWeb.ChatLive.Conversation,
            id: "conversation-#{@conversation_id}",
            session: %{"conversation_id" => @conversation_id, "current_user" => @current_user}
        ) %>
    </div>

    <%# <div class="p-2">
        <%= live_render(@conn, LibuWeb.ChatLive.SentimentLeaderboard, 
            id: "conversation-sentiment-leaderboard-#{@conversation_id}",
            session: %{conversation_id: @conversation_id},
        )%>
    <%# </div> %>
</div>